doctype html
html
    head
        include commonHeader
        script(src='/js/service/draftBoardService.js')
        script(src='/js/controller/draftBoardController.js')
        link(rel='stylesheet', href='/css/draftBoard.css')

    body(ng-app='SpadeApp', ng-controller='DraftBoardController', ng-init='init()')
        .loadingIndicator.absoluteCenterAll(ng-show='loading')
            span.loadingIndicatorHelper
            i.fa.fa-spin.fa-spinner
        .holder
            .jumbotron.draftInfo
                .timerHolder
                    span Time to Pick:
                    span.timer(ng-click='timer.toggle()', ng-class="{'text-danger': timer.time < 30}")
                        | {{timer.formatTime()}}
                .draftTeamInfo
                    div(ng-repeat='(key, team) in getNextTeams()', style='display: inline-block')
                        span.draftTeamHeader {{key}}: 
                        span.draftTeamName {{team}}
            .tableHolder.scrollable.draftBoardHolder
                table.table.table-bordered.draftBoardTable
                    thead
                        tr
                            th.centered Round
                            th.centered(ng-repeat='team in leagueTeams') {{team.long_name}}
                    tbody
                        tr(ng-repeat='round in rounds')
                            td.boardPlayerCell.centered
                                .boardPlayerCell Round {{round}}
                            td.boardPlayerCell.centered(ng-repeat='team in leagueTeams', ng-class='getCssClassForPlayer(getDraftedPlayer(team, round))')
                                div
                                    | {{getDraftedPlayer(team, round).name}}
                                div(ng-show='!isObjectEmpty(getDraftedPlayer(team, round))')
                                    | {{getDraftedPlayer(team, round).position}} ({{getDraftedPlayer(team, round).nfl_team}})
            #tickerBox.tickerBox(ng-mouseover='ticker.moveFlag = false', ng-mouseleave='ticker.moveFlag = true')
                #ticker.ticker(ng-style="{'left': ticker.getTickerLeft()}")
                    span.tickerElement(ng-repeat='(key, player) in draftedPlayers track by $index')
                        | {{$index + 1}}. {{player.name}} - {{player.position}} ({{player.nfl_team}})
